        <ComboBox x:Name="enterprise" HorizontalAlignment="Left" Margin="171,35,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="pollutant" HorizontalAlignment="Left" Margin="171,63,0,0" VerticalAlignment="Top" Width="120"/>

