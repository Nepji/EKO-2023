            <Button Content="Change IMG" HorizontalAlignment="Left" Margin="367,10,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.08,1.781" Click="Button_Click_1"/>
            <Image x:Name="IMG" HorizontalAlignment="Left" Height="188" Margin="289,34,0,0" VerticalAlignment="Top" Width="287" Source="/EKO;component/model/CR.png"/>
