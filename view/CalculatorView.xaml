            <TextBox x:Name="HQRisk_Copy" HorizontalAlignment="Left" Height="23" Margin="164,190,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="112"/>
        </Grid>
        <ComboBox x:Name="enterprise" HorizontalAlignment="Left" Margin="175,26,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="pollutant" HorizontalAlignment="Left" Margin="175,54,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
        <TextBox x:Name="EmissionBlank" HorizontalAlignment="Left" Height="23" Margin="175,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
