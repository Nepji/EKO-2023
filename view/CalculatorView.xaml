            <TextBox x:Name="CR" HorizontalAlignment="Left" Height="23" Margin="36,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="112"/>
            <TextBlock HorizontalAlignment="Left" Margin="36,123,0,0" TextWrapping="Wrap" Text="Неконцерогенний Вплив" VerticalAlignment="Top" Height="18" Width="112"/>
            <TextBox x:Name="HQ" HorizontalAlignment="Left" Height="23" Margin="36,146,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="112"/>
